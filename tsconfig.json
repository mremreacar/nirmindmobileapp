{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "react-native",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["assets/*"],
      "@lib/*": ["src/lib/*"],
      "@src/*": ["src/*"],
      "@services/*": ["services/*"]
    }
  }
}
